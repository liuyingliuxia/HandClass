<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teachbg"
    android:textColor="#00ff00"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/teaphoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="130dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/stuphototext"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:gravity="right"
            android:text="照片：" />
        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/head04"
            android:scaleType="centerInside"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tea_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teaphoto"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="90dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="5dp"
            android:textColor="#000000"
            android:text="职工号："/>
        <EditText
            android:id="@+id/et_tea_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:textColor="#000000"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/teaname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tea_no"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/stunameText"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#000000"
            android:text="姓名：" />

        <EditText
            android:id="@+id/et_tea_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000000"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/teadate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teaname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/stuDateText"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#000000"
            android:text="出生日期：" />

        <EditText
            android:id="@+id/et_tea_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:gravity="center"
            android:textColor="#000000"
            android:inputType="textPersonName"

            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/teasex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teadate"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/teaSex"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="right"
            android:text="性别：" />

        <EditText
            android:id="@+id/et_tea_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/teaprofress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teasex"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stuProfessText"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="right"
            android:text="授课专业：" />
        <EditText
            android:id="@+id/et_tea_profess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stuclass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teaprofress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stuClassText"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#000000"
            android:text="授课班级：" />
        <EditText
            android:id="@+id/et_tea_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:gravity="center"
            android:textColor="#000000"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="textPersonName"
            />
    </LinearLayout>


</RelativeLayout>