<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/teachbg"
    android:orientation="vertical"
    tools:context="edu.fjut.se1603.lwd34.Activity.TeacherActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/teaFragment"
            android:name="edu.fjut.se1603.lwd34.Fragment.teaInforFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_tea_infor">

        </fragment>


    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">



        <Button
            android:id="@+id/meT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/button_color3"
            android:text="我" />
        <Button
            android:id="@+id/attendT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/button_color4"
            android:text="出勤管理"

            />
        <Button
            android:id="@+id/assessT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/button_color3"
            android:text="课堂评价管理" />

        <Button
            android:id="@+id/homeworkT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/button_color4"
            android:text="作业成绩管理" />

        </LinearLayout>

</RelativeLayout>